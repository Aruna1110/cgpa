# CGPA Calculator Program

n = int(input("Enter the number of subjects: "))

total_credit_points = 0
total_credits = 0

for i in range(n):
    print("\nSubject", i + 1)
    
    grade = float(input("Enter Grade Point (out of 10): "))
    credit = float(input("Enter Subject Credit: "))
    
    total_credit_points += grade * credit
    total_credits += credit

cgpa = total_credit_points / total_credits

print("\nTotal Credit Points:", total_credit_points)
print("Total Credits:", total_credits)
print("CGPA =", round(cgpa, 2))
